      --card:#fff;--muted:#6c757d;--bord:#e9ecef;--danger:#dc3545;--ok:#28a745;--warn:#ffc107;
      --shadow:0 8px 24px rgba(0,0,0,.08)
    }
    *{box-sizing:border-box;margin:0;padding:0}
    html{scroll-behavior:smooth}
    body{font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Inter,Arial,sans-serif;background:var(--bg);color:var(--ink);line-height:1.6}
    a{color:var(--primary)}[id]{scroll-margin-top:84px}
    .container{max-width:1100px;margin:auto;padding:0 1rem}
    header{position:sticky;top:0;z-index:1000;background:linear-gradient(90deg,var(--primaryDark),var(--primary));color:#fff;box-shadow:0 2px 10px rgba(0,0,0,.12)}
    .nav{display:flex;align-items:center;justify-content:space-between;padding:14px 0}
    .brand{font-weight:800;letter-spacing:.3px;display:flex;gap:.5rem;align-items:center}
    .menu{display:flex;gap:1rem;flex-wrap:wrap}
    .menu a{color:#fff;text-decoration:none;font-weight:600;opacity:.95}
    .menu a:hover{opacity:1;text-decoration:underline}
    .hero{background:linear-gradient(135deg,var(--primary) 0%,var(--primaryDark) 100%);color:#fff;text-align:center;padding:56px 0}
    .hero h1{font-size:2rem;margin-bottom:.5rem}
    .section{padding:42px 0}
    h2{color:var(--primary);margin-bottom:12px;border-bottom:2px solid var(--bord);padding-bottom:6px;display:flex;gap:.5rem;align-items:center}
    .muted{color:var(--muted);font-style:italic}
    .grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(260px,1fr));gap:18px}
    .card{background:var(--card);border:1px solid var(--bord);border-radius:10px;box-shadow:var(--shadow);padding:16px;display:flex;flex-direction:column}
    .card:hover{transform:translateY(-4px);transition:.25s}
    .product-img{width:100%;height:170px;object-fit:cover;border-radius:8px;border:1px solid #d7dee9;margin-bottom:10px}
    .price{color:var(--danger);font-weight:800;margin:.35rem 0 1rem}
    .btn{display:inline-block;padding:.7rem 1rem;border-radius:8px;border:0;background:var(--muted);color:#fff;font-weight:700;cursor:not-allowed;opacity:.8}
    .pill{display:inline-flex;align-items:center;gap:.4rem;background:#eef5ff;color:#0a3d91;border:1px solid #cfe2ff;padding:.35rem .6rem;border-radius:999px;font-size:.85rem;font-weight:700}
    details{background:#f6f6f6;border-left:4px solid var(--warn);padding:.6rem .8rem;border-radius:8px;margin-top:.6rem}
    pre{background:#f1f3f5;border:1px solid #dde1e6;border-radius:6px;padding:.75rem;overflow:auto}
    ul.clean{list-style:none;padding-left:0}
    ul.clean li{padding-left:1.2rem;position:relative;margin:.5rem 0}
    ul.clean li:before{content:"•";position:absolute;left:0;color:var(--primary);font-weight:900}
    .highlight{background:#fff3cd;border:1px solid #ffe69c;padding:14px;border-radius:10px}
    .two{display:grid;grid-template-columns:1fr 1fr;gap:18px}
    footer{background:#1f2630;color:#cfd6df;margin-top:42px}
    .foot{display:flex;justify-content:space-between;gap:1rem;padding:18px 0;flex-wrap:wrap}
    .small{font-size:.9rem}
    @media(max-width:768px){.two{grid-template-columns:1fr}}
